<!DOCTYPE html>
<html>
<head>
  
  <title>Admin Products</title>

  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
    body{margin:0;font-family:'Nunito Sans',sans-serif;background:#f3f4f6}
    .main{margin-left:260px;padding:32px}
    table{
      width:100%;
      background:#fff;
      border-radius:16px;
      overflow:hidden;
      box-shadow:0 15px 35px rgba(0,0,0,.08);
    }
    th,td{padding:16px;text-align:left}
    th{background:#111827;color:#fff;font-weight:700}
    tr:hover{background:#f9fafb}
    img{width:70px;border-radius:10px}
  </style>
</head>
<body>

<div class="main">
  <h1>Products</h1>

  <table>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
    </tr>

    <% products.forEach(p => { %>
    <tr>
      <td><img src="<%= p.img %>"></td>
      <td><%= p.name %></td>
      <td>â‚¹ <%= p.price %></td>
    </tr>
    <% }) %>
  </table>
</div>

</body>
</html>
